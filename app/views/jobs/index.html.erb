<button type='button' class='btn btn-primary btn-block' data-toggle='modal' data-target='#new-job' >
  Create Job
</button>


<!-- Create job button -->
<%= render 'jobs/new' %>
<br />

<!-- Available jobs section -->
<div class='panel-group' id='available-jobs-accordion'>
  <% @available_jobs.each do |record| %>
    <div class='panel panel-default'>
      <div class='panel-heading' id='heading<%= record.id %>'>
        <h4 class='panel-title'>
          <a role='button'
             data-toggle='collapse'
             data-parent='#available-jobs-accordion'
             href='#available-jobs-collapse<%= record.id %>'>
            <%= record.company_name %>
          </a>
        </h4>
      </div>
      <div id='available-jobs-collapse<%= record.id %>'
           class='panel-collapse collapse'>
        <div class='panel-body'>
          <%= record.location %><br />
          <%= record.rate  %><br />
          <%= record.class_date  %><br />
          <%= record.class_time  %><br />
          <%= record.number_of_students  %><br />
          <%= record.needs_equipment  %><br />
          <%= record.needs_insurance  %><br />
          <%= record.description  %><br />
        </div>
      </div>
    </div>
  <% end %>

