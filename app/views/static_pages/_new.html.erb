<div class='modal fade' id='new-job'>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <button type='button' class='close' data-dismiss='modal'></button>
        <h4 class='modal-title'>Create New Job</h4>
      </div>
      <%= form_for @new_job, url: jobs_path do |job| %>
        <div class='modal-body'>
          <input type='hidden' id='role' name='role' value='<%= @role %>'>
          <div class='form-group'>
            <%= job.label :company_name %>
            <%= job.text_field :company_name, class: 'form-control'  %>
          </div>
          <div class='form-group'>
            <%= job.label :course %>
            <%= job.select :course, options_for_select(@available_courses), {}, {class: 'form-control'} %>
          </div>
          <div class='form-group'>
            <%= job.label :location, "Location (city)" %>
            <%= job.text_field :location, class: 'form-control' %>
          </div>

          <!-- Need to adjust format -->
          <div class='form-group'>
            <%= job.label :class_date %>
            <%= job.date_select :class_date, class: 'form-control' %>
          </div>

          <!-- Need to adjust format -->
          <div class='form-group'>
            <%= job.label :class_time %>
            <%= job.time_select :class_time, class: 'form-control' %>
          </div>

          <div class='form-group'>
            <%= job.label :number_of_students %>
            <%= job.text_field :number_of_students, class: 'form-control' %>
          </div>

          <div class='form-group'>
            <%= job.label :rate %>
            <%= job.text_field :rate, class: 'form-control' %>
          </div>

          <div class='form-group'>
            <%= job.label :description %>
            <%= job.text_area :description, class: 'form-control', rows: 3 %>
          </div>

          <div class='form-group'>
            <label>Select all that apply:</label>
            <br />
            <label class="checkbox-inline" >
              <%= job.check_box :needs_equipment %>
              Needs equipment
            </label>
            <label class='checkbox-inline'>
              <%= job.check_box :needs_insurance %>
              Needs insurance
            </label>
          </div>
      </div>
      <div class='modal-footer'>
        <button type='button' class='btn btn-default' data-dismiss="modal">Close</button>
        <%= job.submit "Submit", class: 'btn btn-primary' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
